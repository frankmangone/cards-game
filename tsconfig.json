{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["./@types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@components*": ["src/components", "src/components/*"],
      "@contexts*": ["src/contexts", "src/contexts/*"],
      "@hooks*": ["src/hooks", "src/hooks/*"],
      "@lib*": ["src/lib", "src/lib/*"],
      "@screens*": ["src/screens", "src/screens/*"]
    }
  }
}
